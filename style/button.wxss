.app-btn{
    background: linear-gradient(180deg, #FCDB00 0%, #F7B500 100%)!important;
    box-shadow: 0px 2px 6px 0px #F7B500;
    border: none!important;
    color: #fff!important;
}
.app-bottom-btn{
    position: fixed;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 750rpx;
    padding: 10rpx 32rpx 30rpx;
    background-color: #fff;
}
.app-bottom-btn.ipx{
    padding-bottom: 100rpx;
}

.app-bottom-btn .app-btn{
    width: 686rpx;
}
.btn-text{
    font-size: 40rpx;
}