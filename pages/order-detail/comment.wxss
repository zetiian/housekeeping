.my-account {
  justify-content: flex-start;
  align-items: flex-start;
  padding: 20rpx;
  margin-top: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #727484;
}

.my-account-box {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
  justify-content: space-around;
}

.question-item {
  height: 108rpx;
  align-items: center;
  border-bottom: 1rpx solid #AFB9C6;
}


.question-item-name {
  margin-left: 30rpx;

}
.my-account-btn{
  width: 100%;
  justify-content: center;
}
.app-contanier{
  box-shadow: none;
}
.choose-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
    opacity: 0;
    border-radius: none;
    background: url(data:image/png;base64,) no-repeat center center/ 100% 100%;
}
.choose-icon.active {
  opacity: 1;

}


.nav-row{
  box-shadow: 0px 0px 6px 0px rgba(123, 115, 107, 0.24);
}
.nav-item {
   justify-content: flex-start;
   height: 160rpx;
   position: relative;
   padding-left: 32rpx;
   background-color: #fff;
}
.nav-item-icon{
   width: 40rpx;
   height: 40rpx;
   background-image: url(data:image/png;base64,);
   background-position: center;
   background-repeat: no-repeat;
   background-size: contain;
   margin-right: 20rpx;
}
.nav-item.active::after {
   content: '';
   position: absolute;
   bottom: 10rpx;
   left: 50%;
   transform: translateX(-50%);
   border-radius: 2rpx;
   background-color: #0a0;
   width: 40rpx;
   height: 8rpx;
   background: linear-gradient(180deg, #FCDB00 0%, #F7B500 100%);
   box-shadow: 0px 0px 6px 0px rgba(123, 115, 107, 0.24);
   border-radius: 6rpx;
}

.nav-item-last::before {
   content: '';
   position: absolute;
   top: 50%;
   transform: translateY(-50%);
   left: 4rpx;
   border-radius: 2rpx;
   background-color: #0a0;
   width: 4rpx;
   height: 50rpx;
   background: #eee;
   box-shadow: 0px 0px 6px 0px rgba(123, 115, 107, 0.24);
   border-radius: 6rpx;
}

