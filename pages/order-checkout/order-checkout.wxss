.nav-row{
    box-shadow: 0px 0px 2px 0px rgba(123, 115, 107, 0.24);
 }
.nav-item {
    justify-content: center;
    height: 112rpx;
    position: relative;
}

.nav-item.active::after {
    content: '';
    position: absolute;
    bottom: 10rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 2rpx;
    background-color: #0a0;
    width: 40rpx;
    height: 8rpx;
    background: linear-gradient(180deg, #FCDB00 0%, #F7B500 100%);
    box-shadow: 0px 0px 6px 0px rgba(123, 115, 107, 0.24);
    border-radius: 6rpx;
}

.nav-item-last::before {
    content: '';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 4rpx;
    border-radius: 2rpx;
    background-color: #0a0;
    width: 4rpx;
    height: 50rpx;
    background: #eee;
    box-shadow: 0px 0px 6px 0px rgba(123, 115, 107, 0.24);
    border-radius: 6rpx;
}

.order-box {
    padding-bottom: 200rpx;
}

.order-container {
    font-size: 32rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #727484;
    margin-bottom: 16rpx;
    padding-bottom: 40rpx;
    padding:0 32rpx;
    box-shadow: 0px 0px 6px 0px rgba(123, 115, 107, 0.24);
}

.order-item {
    border-bottom: 1rpx solid #eee;
    padding: 28rpx 0;
}

.order-status {
   margin-right: 14rpx;

}
.order-status.active{
    color: #F7B500;
}
.order-detail {
   font-size: 28rpx;
   padding: 32rpx 0;
   align-items: space-around;
   min-height: 176rpx;
}
.order-time{
    margin-bottom: 10rpx;
}
.order-flag{
    width: 35rpx;
    height: 35rpx;
    margin-right: 20rpx;
    background-repeat: no-repeat;
    background-size: cover;
    background-image: url(data:image/png;base64,);
}


.select-weeks{
    padding: 0 28rpx;
    margin: 30rpx 0;
}
.select-weeks-item{
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 50%;
    text-align: center;
    font-size: 36rpx;
    color: #A3A19D;
}
.select-weeks-item.active{
    background-color: #F7B500;
    color: #fff;
}