           <view> 请选择 </view>
           <van-icon name="arrow" />
         </view>
      </view>
      <view class="order-item app-flex app-flex-between no-border" >
        <view> 留言 </view>
      </view>
       <van-cell-group>
        <van-field
          value="{{ message }}"
          autosize
          type="textarea"
          placeholder="请输入留言"
          border="{{ false }}"
        />
      </van-cell-group>
    
     
  </view>
  <view class="order-item app-flex   no-border" >
    <view class="agree active"> </view>
    <view> 我了解并同意 </view>
     <view class="app-link"> 《用户协议》 </view>
      
  </view>
</scroll-view>
  
  
