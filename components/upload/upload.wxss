.publish-images {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
    /* padding: 0 0rpx 0 30rpx; */
}
.publish-images__add,
.publish-images__item {
    width: 300rpx;
  height: 200rpx; 
    box-sizing: border-box;
    border-radius: 8rpx;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    position: relative;
    background-color: rgba(0, 0, 0, 0);
}
.publish-images__item .image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.publish-images__item-close-con{
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    right: -32rpx;
    top: -32rpx;
    display:flex;
    align-items: center;
    justify-content: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    background-image: url(data:image/png;base64,);
}

.publish-images__add {
    background-size: contain;
}
